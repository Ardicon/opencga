{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cidr": {
            "type": "object",
            "defaultValue": {
                "addressPrefixes": "10.0.0.0/16",
                "subnets": {
                    "kubernetes": "10.0.0.0/22",
                    "aci": "10.0.4.0/22",
                    "hdinsight": "10.0.8.0/24",
                    "mongo": "10.0.9.0/24",
                    "solr": "10.0.10.0/24",
                    "login": "10.0.12.0/24"
                }
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "apiVersion": "2018-08-01",
            "name": "vnet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('cidr').addressPrefixes]"
                    ]
                },
                "subnets": [
                    {
                        "name": "kubernetes",
                        "properties": {
                            "addressPrefix": "[parameters('cidr').kubernetes]",
                            "ipConfigurations": [
                            ],
                            "delegations": [
                            ],
                            "serviceEndpoints": [

                            ]
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "aci",
                        "properties": {
                            "addressPrefix": "[parameters('cidr').aci]",
                            "ipConfigurations": [
                            ],
                            "delegations": [
                                {

                                    "name": "aciDelegation",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups"
                                    }
                                }
                            ],
                            "serviceEndpoints": [

                            ]
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "hdinsight",
                        "properties": {
                            "addressPrefix": "[parameters('cidr').hdinsight]",
                            "ipConfigurations": [
                            ],
                            "delegations": [
                            ],
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Storage"
                                }
                            ]
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "mongo",
                        "properties": {
                            "addressPrefix": "[parameters('cidr').mongo]",
                            "ipConfigurations": [
                            ],
                            "delegations": [
                            ],
                            "serviceEndpoints": [
                            ]
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "solr",
                        "properties": {
                            "addressPrefix": "[parameters('cidr').solr]",
                            "ipConfigurations": [
                            ],
                            "delegations": [
                            ],
                            "serviceEndpoints": [
                            ]
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    },
                    {
                        "name": "login",
                        "properties": {
                            "addressPrefix": "[parameters('cidr').login]",
                            "ipConfigurations": [
                            ],
                            "delegations": [
                            ],
                            "serviceEndpoints": [
                            ]
                        },
                        "type": "Microsoft.Network/virtualNetworks/subnets"
                    }
                ],
                "virtualNetworkPeerings": [
                ],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        }
    ],
    "outputs": {
        "vnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]"
        },
        "virtualNetworkName": {
            "type": "string",
            "value": "vnet"
        },
        "kubernetesSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet','kubernetes')]"
        },
        "aciSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet','aci')]"
        },
        "hdinsightSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet','hdinsight')]"
        },
        "mongoSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet','mongo')]"
        },
        "solrSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet','solr')]"
        },
        "loginSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet','login')]"
        }
    }
}
