{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string"
        },
        "_artifactsLocationSasToken": {
            "type": "string"
        },
        "applicationGatewaySubnetId":{
            "type": "string"
        },
        "skuName":{
            "defaultValue": "Standard_Small",
            "type": "string"
        },
        "skuTier":{
            "defaultValue": "Standard",
            "type": "string"
        },
        "skuCapacity":{
            "defaultValue": 1,
            "type": "int"
        },
        "dnsNamePrefix": {
            "type": "string",
            "metadata": {
                "description": "DNS prefix used by the app gateway IP"
            }
        },
        "appGwSslEmail": {
            "type": "string",
            "defaultValue": "user@exampledomain.com"
        },
        "LogAnalyticsWorkspaceResourceID": {
            "type": "string",
            "metadata": {
                "description": "Log Analytics Workspace Resource ID"
            }
        }
    },
    "variables": {
        "functionAppName": "[concat('appgwfn-', uniquestring(resourceGroup().id))]"
    },
    "resources": [
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "appgw",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/appgw/appgw.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {  
                    "applicationGatewaySubnetId": {
                        "value": "[parameters('applicationGatewaySubnetId')]"
                    },
                    "skuName":{
                        "value": "[parameters('skuName')]"
                    },
                    "skuTier":{
                        "value": "[parameters('skuTier')]"
                    },
                    "skuCapacity":{
                        "value": "[parameters('skuCapacity')]"
                    },
                    "azureFunctionName": {
                        "value": "[variables('functionAppName')]"
                    },
                    "dnsNamePrefix":{
                        "value": "[parameters('dnsNamePrefix')]"
                    },
                    "LogAnalyticsWorkspaceResourceID": {
                        "value": "[parameters('LogAnalyticsWorkspaceResourceID')]"
                    }
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "keyvault",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/appgw/keyvault.json')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "functions",
            "dependsOn": ["appgw", "keyvault"],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/appgw/functions.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "functionAppName": {
                        "value": "[variables('functionAppName')]"
                    },
                    "appGwDomain": {
                        "value": "[reference('appgw').outputs.fqdn.value]"
                    },
                    "appGwSslEmail": {
                        "value": "[parameters('appGwSslEmail')]"
                    },
                    "keyVaultName": {
                        "value": "[reference('keyvault').outputs.keyVaultName.value]"
                    }
                }
            }
        },
        {
            "resourceGroup": "[parameters('rgName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "msi",
            "dependsOn": ["appgw", "keyvault", "functions"],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/appgw/accesspolicies.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vaultName": {
                        "value": "[reference('keyvault').outputs.keyVaultName.value]"
                    },
                    "objectId": {
                        "value": "[reference('functions').outputs.principalId.value]"
                    },
                    "tenantId": {
                        "value": "[reference('functions').outputs.tenantId.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "appgwBackendAddressPoolId":{
            "type": "string",
            "value": "[reference('appgw').outputs.appgwBackendAddressPoolId.value]"
        },
        "fqdn": {
            "type":"string",
            "value": "[reference('appgw').outputs.fqdn.value]"
        }
    }
}